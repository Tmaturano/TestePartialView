@{
    ViewBag.Title = "Home Page";
}

<br />

<div class="container">
    <div class="row">
        <div id="partial">

        </div>

        <div>
            <button id="btnCarregaPartial">Load Partial View</button>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#btnCarregaPartial").click(function () {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("TestPartialView", "Home")',
                    dataType: "html",
                    async: true,
                    data : {id :1},
                    success: function (result) {
                        $("#partial").html(result);
                    }
                });
            });
        });
    </script>
}